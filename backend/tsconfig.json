{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest", "@types/jest"]
  },
  "include": ["src/**/*.ts", "src/tests/*.ts", "src/types/**/*.d.ts"]
}
